<table class="table ">
  <thead>
    <tr>
      <th scope="col">Cliente</th>
      <th scope="col">Cuil</th>
      <th scope="col">Monto</th>
    <th scope="col">Fecha</th>
    </tr>
  </thead>
  <tbody >
   <form action="/ventas" method="GET" >
     <div class="inputBuscar">
      <div class="inputNada">
        <input type="text" name="buscador" id="buscador" placeholder="Buscar por nombre"  >
        <input type="submit" name="buscar" id="buscar" value="Buscar..." >
      </div>
      <div class="inputTodos">
        <form action="/ventas" method="GET">
        <input class="inputTodo" type="submit" value="Ver todas"></form>
      </div>
     
     </div>
     
   </form>
   
   {{#each ventas}}
    <tr class="body-ventas">
     
      <td class="cliente">{{cliente}}</td>
      <td>{{cuil}}</td>
      <td>{{monto}}</td>
      <td>{{fecha}}</td>
      <td class="td-container2">
          <a class="botonEditar" href="/editVenta/{{_id}}">Editar</a>
          <a class="botonEliminar" href="/deleteVenta/{{_id}}">Eliminar</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>


<a class="agregarVenta" href="/addVenta">Agregar venta</a>
